@{ 
    bool DarkTheme = (bool)ViewData["DarkTheme"];
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AudioPlayer</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons-1.3.0/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    @if (DarkTheme)
    {
        <link rel="stylesheet" href="~/css/theme-dark.css" />
    }
    else
    {
        <link rel="stylesheet" href="~/css/theme-light.css" />
    }
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow mb-3">
            <div class="container">
                <a class="home" asp-area="" asp-controller="Home" asp-action="Index">AudioPlayer</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <div class="custom-control custom-switch" style="padding-right:50px">
                                @if (DarkTheme)
                                {
                                    <input type="checkbox" class="custom-control-input form-control" id="darkThemeSwitch" checked>
                                }
                                else
                                {
                                    <input type="checkbox" class="custom-control-input form-control" id="darkThemeSwitch">
                                }
                                <label class="custom-control-label" for="darkThemeSwitch">Dark theme</label>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
